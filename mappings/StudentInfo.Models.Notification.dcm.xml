<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="StudentInfo\Models\Notification" table="notifications">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="tablename_seq" allocation-size="100" initial-value="1"/>
        </id>

        <field name="description" column="description" type="string" nullable="false"/>

        <field name="expiresAt" column="expires_at" type="datetime" nullable="false"/>

        <many-to-one target-entity="StudentInfo\Models\Event" field="event" inversed-by="notifications">
            <join-column name="event_id" referenced-column-name="id"/>
        </many-to-one>

    </entity>

</doctrine-mapping>