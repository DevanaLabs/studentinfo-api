<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="StudentInfo\Models\Lecture" table="lectures">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="tablename_seq" allocation-size="100" initial-value="1"/>
        </id>

        <field name="startsAt" column="starts_at" type="datetime" nullable="false"/>

        <field name="endsAt" column="ends_at" type="datetime" nullable="false"/>

        <one-to-many field="events" target-entity="StudentInfo\Models\Event" mapped-by="lecture">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="StudentInfo\Models\Course" field="course" inversed-by="lectures">
            <join-column name="course_id" referenced-column-name="id"/>
        </many-to-one>

        <many-to-one target-entity="StudentInfo\Models\Professor" field="professor" inversed-by="lectures">
            <join-column name="professor_id" referenced-column-name="id"/>
        </many-to-one>

        <many-to-one target-entity="StudentInfo\Models\Classroom" field="classroom" inversed-by="lectures">
            <join-column name="classroom_id" referenced-column-name="id"/>
        </many-to-one>

        <many-to-many field="students" mapped-by="lectures" target-entity="StudentInfo\Models\Student"/>

        <many-to-many field="groups" mapped-by="lectures" target-entity="StudentInfo\Models\Group"/>
    </entity>

</doctrine-mapping>